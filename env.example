# UDS Environment Configuration

# New Relic Configuration (REQUIRED)
NEW_RELIC_API_KEY=your-api-key-here
NEW_RELIC_ACCOUNT_ID=your-account-id-here
NEW_RELIC_REGION=US  # US or EU

# Service Configuration
LOG_LEVEL=INFO
INTELLIGENCE_LOG_LEVEL=INFO

# Ports
MCP_PORT=3333
INTELLIGENCE_GRPC_PORT=50051
METRICS_PORT=8080

# Cache Configuration
CACHE_DIR=/tmp/uds-cache
REDIS_URL=redis://redis:6379

# Intelligence Engine Configuration
INTELLIGENCE_PATTERN_MIN_CONFIDENCE=0.7
INTELLIGENCE_QUERY_CACHE_SIZE=100
INTELLIGENCE_QUERY_OPTIMIZER_MODE=balanced

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme
PROMETHEUS_RETENTION_DAYS=15

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
GRPC_MAX_MESSAGE_SIZE=104857600  # 100MB

# Security
ENABLE_AUTH=false
JWT_SECRET=your-secret-here
API_RATE_LIMIT=100

# Feature Flags
ENABLE_PATTERN_DETECTION=true
ENABLE_QUERY_GENERATION=true
ENABLE_VISUALIZATION_RECOMMENDATIONS=true
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=false
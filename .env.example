# New Relic API Configuration
NEW_RELIC_API_KEY=your_new_relic_api_key_here
NEW_RELIC_USER_KEY=your_new_relic_user_key_here
NEW_RELIC_ACCOUNT_ID=your_account_id_here
NEW_RELIC_REGION=US  # or EU

# NRDB Query Configuration
NRDB_QUERY_TIMEOUT=120s
NRDB_MAX_RETRY_ATTEMPTS=3
NRDB_RATE_LIMIT_REQUESTS_PER_SECOND=10

# OpenTelemetry Configuration for New Relic APM
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.nr-data.net:4317
OTEL_EXPORTER_OTLP_HEADERS=Api-Key=your_new_relic_license_key_here
OTEL_SERVICE_NAME=mcp-server-newrelic-discovery
OTEL_RESOURCE_ATTRIBUTES=service.name=discovery-core,service.version=1.0.0,environment=development

# Discovery Engine Configuration
DISCOVERY_WORKER_COUNT=10
DISCOVERY_CACHE_TTL=5m
DISCOVERY_CACHE_SIZE=1000
DISCOVERY_PROFILE_DEPTH=standard  # basic, standard, or deep

# Pattern Detection Configuration
PATTERN_DETECTION_ENABLED=true
PATTERN_DETECTION_MIN_SAMPLES=100
PATTERN_DETECTION_CONFIDENCE_THRESHOLD=0.8

# Relationship Mining Configuration
RELATIONSHIP_MINING_ENABLED=true
RELATIONSHIP_MIN_CORRELATION=0.7
RELATIONSHIP_MAX_SCHEMAS=100

# Quality Assessment Configuration
QUALITY_ASSESSMENT_ENABLED=true
QUALITY_COMPLETENESS_THRESHOLD=0.8
QUALITY_CONSISTENCY_THRESHOLD=0.9

# Database Configuration (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/discovery_db?sslmode=disable

# Redis Configuration (for distributed caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json or text
LOG_OUTPUT=stdout  # stdout, stderr, or file path

# Feature Flags
FEATURE_INTELLIGENT_DISCOVERY=true
FEATURE_ML_PATTERNS=false
FEATURE_SEMANTIC_ANALYSIS=true
FEATURE_PREDICTIVE_CACHING=false

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY_SALT=your_api_key_salt_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# MCP Server Configuration
MCP_SERVER_NAME=newrelic-discovery
MCP_SERVER_VERSION=1.0.0
MCP_MAX_REQUEST_SIZE=10MB
MCP_REQUEST_TIMEOUT=5m

# Agent-to-Agent (A2A) Configuration
A2A_ENABLED=true
A2A_DISCOVERY_PORT=8081
A2A_AUTH_TOKEN=your_a2a_auth_token_here

# Development/Testing Configuration
DEV_MODE=false
MOCK_NRDB_ENABLED=false
TEST_ACCOUNT_ID=test_account_123456
# New Relic MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: New Relic API Key (User API Key with appropriate permissions)
NEW_RELIC_API_KEY=NRAK-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Optional: Default Account ID (can be overridden per request)
NEW_RELIC_ACCOUNT_ID=1234567

# Optional: New Relic Region (US or EU, default: US)
NEW_RELIC_REGION=US

# Optional: NerdGraph Endpoint (default: https://api.newrelic.com/graphql)
# For EU region, use: https://api.eu.newrelic.com/graphql
# NERDGRAPH_URL=https://api.newrelic.com/graphql

# Transport Configuration
# Options: stdio (default), http, multi
MCP_TRANSPORT=stdio

# HTTP Transport Settings (when using http or multi transport)
HTTP_HOST=127.0.0.1
HTTP_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO

# Audit Logging
AUDIT_LOG_FILE=logs/audit.jsonl
AUDIT_MAX_MEMORY_EVENTS=10000
AUDIT_ENABLE_CONSOLE=true
AUDIT_ENABLE_METRICS=true

# Cache Configuration
CACHE_BACKEND=memory
CACHE_MAX_SIZE=1000
CACHE_MAX_MEMORY_MB=100
CACHE_DEFAULT_TTL=300

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Performance Configuration
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=30
NERDGRAPH_TIMEOUT=30

# Plugin Configuration
PLUGIN_AUTO_DISCOVER=true
PLUGIN_DIRECTORY=plugins

# Entity Definitions
ENTITY_DEFINITIONS_REPO=https://github.com/newrelic/entity-definitions.git
ENTITY_DEFINITIONS_UPDATE_INTERVAL=86400

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Session Management
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_IDLE_MINUTES=10
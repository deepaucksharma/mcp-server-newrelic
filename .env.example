# New Relic MCP Server Configuration

# Required Configuration
NEW_RELIC_API_KEY=your-user-api-key         # Your New Relic User API key
NEW_RELIC_ACCOUNT_ID=your-account-id        # Your New Relic Account ID
JWT_SECRET=                                 # Generate: openssl rand -base64 32
API_KEY_SALT=                              # Generate: openssl rand -base64 16

# Optional Configuration
NEW_RELIC_REGION=US                        # US or EU (default: US)
NEW_RELIC_LICENSE_KEY=                     # For APM monitoring of this service
NEW_RELIC_APP_NAME=mcp-server-newrelic     # APM application name

# Server Configuration
SERVER_PORT=8080                           # MCP server port
LOG_LEVEL=INFO                            # DEBUG, INFO, WARN, ERROR
ENVIRONMENT=development                    # development or production

# Cache Configuration
CACHE_ENABLED=true                        # Enable caching
REDIS_URL=redis://localhost:6379          # Redis URL for L2 cache
CACHE_TTL=300s                           # Default cache TTL

# Security Configuration
TLS_ENABLED=false                         # Enable TLS (required for production)
TLS_CERT_FILE=                           # Path to TLS certificate
TLS_KEY_FILE=                            # Path to TLS key

# Development Options
DEV_MODE=false                           # Enable development mode
MOCK_MODE=false                          # Use mock data instead of real API
